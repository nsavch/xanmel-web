{% extends "base.jinja" %}

{% block body %}
<div class="container-fluid">
    <div class="row" style="background-color: #222222; color: #eeeeee">
        <div class="col-md-12">
            <table class="table table-bordered">
                <tr>
                    <th>
                        Server
                    </th>
                    <th>
                        Nickname
                    </th>
                    <th>
                        time
                    </th>
                    <th>
                        Timestamp
                    </th>
                </tr>
                {% for i in records %}
                    <tr>
                        <td>
                            {{ i.server.name }}
                        </td>
                        <td>
                            {{ html_colors(i.nickname)|safe }}
                        </td>
                        <td>
                            {{ i.time }}
                        </td>
                        <td>
                            {{ i.timestamp }}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
{% endblock %}