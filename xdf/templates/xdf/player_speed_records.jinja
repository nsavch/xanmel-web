{% extends "xdf/base.jinja" %}

{% block title %}Speed Records of {{ player.nickname }} - Xonotic DeFRaG{% endblock %}


{% block content %}
    <div class="col-md-12">
        <h1>Xonotic DeFRaG</h1>
        <h2>Speed Records of <a href="{{ url('xdf:player', player.id) }}">{{ player.nickname }}</a></h2>
        <p>View <a href="{{ url('xdf:player-time-records', player.id) }}">time records</a></p>
        <div class="row">
            <div class="col-lg-6 col-md-9 col-12">
                <table class="table table-bordered table-striped">
                    {% for i in records.values() %}
                        <tr>
                            <th><a href="{{ url('xdf:map', urlquote(i.map)) }}">{{ i.map }}</a></th>
                            <td>{{ i.speed|round }}qu/s</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>

    </div>
{% endblock %}
