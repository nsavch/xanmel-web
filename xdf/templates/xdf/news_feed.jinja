{% extends "base.jinja" %}

{% block content %}
    <h1>Racing records</h1>
    <ul class="nav nav-tabs">
        {% for i in servers %}
            <li {% if i.id == active_server.id %}class="active"{% endif %}>
                <a href="{{ url('xdf:main') }}?server_id={{ i.id }}">{{ i.name }}</a>
            </li>
        {% endfor %}
    </ul>
    <div class="tab-content">
        <div class="tab-pane active">
            {% for record in records %}
                {{ record['type'] }}
                {{ record['timestamp'] }}
            {% endfor %}
        </div>
    </div>
{% endblock %}
